   <div class="row">
      {{#each data}}
      <div class=" col-lg card card-body-special" id="card">
        <div class="card-body">
          {{#if this.chosenOne}}
          <p class="popular">Our most POPULAR plan</p>
          {{/if}}
        <img class="planPageImage" src="data:{{this.image.contentType}};base64,{{this.image.data}}"/>
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">{{this.description}}</p>
          <p class="card-text">{{this.price}}</p>
          <ul class="list-group ">
            {{#each this.items}}
            <li class="list-group-item">{{this}}</li>
            {{/each}}
          </ul>
        </div>
        <button class="purchaseButton btn btn-primary btn-md" value={{this._id}}>Purchase Plan</button>
      </div>
      {{/each}}
    </div>